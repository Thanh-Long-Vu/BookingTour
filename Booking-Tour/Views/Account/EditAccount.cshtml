                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "bg-light form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
