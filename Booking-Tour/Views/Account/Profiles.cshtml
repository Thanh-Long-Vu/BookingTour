@model Booking_Tour.Models.Users
@{
    ViewBag.Title = "SettingsAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container user-account">
    <div class="row">
        <div class="col-3">
            <div class="profile-user-img">
                <img src="~/Content/images/User/default-profile.jpg" alt="Alternate Text" class="img-fluid" />
                <i class="fas fa-camera-retro"></i>
                <p class="m-0"><b>@Html.DisplayFor(model => model.name)</b></p>
                <p class="m-0">@Html.DisplayTextFor(model => model.email)</p>
               
            </div>
        </div>
        <div class="col-9">
            @using (Html.BeginForm("Profiles", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger text-bold" })
                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger text-bold" })
                @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger text-bold" })
                @Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "text-danger text-bold" })
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="text" id="email" class="form-control" value="@Html.DisplayTextFor(model => model.email)" disabled />
                    @Html.HiddenFor(model => model.email)
                </div>
                <div class="form-group">
                    <label for="userName">User Name</label>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @id = "userName" } })
                </div>
                <div class="form-group">
                    <label for="not">NOT UPDATE YET</label>
                    <input type="text" readonly class="form-control" id="not" placeholder="Update in comming">
                </div>
                <div class="form-group">
                    <label for="update">NOT UPDATE YET</label>
                    <input type="text" readonly class="form-control" id="update" placeholder="Update in comming">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Example textarea</label>
                    <textarea readonly class="form-control" id="exampleFormControlTextarea1" rows="3">Update in comming</textarea>
                </div>
                <input class="btn btn-info" type="submit" value="Update" />
            }
        </div>
    </div>
</section>
